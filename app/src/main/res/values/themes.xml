<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MioVini" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryDay</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantDay</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryDay</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondaryDay</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantDay</item>
        <item name="colorOnSecondary">@color/colorOnSecondaryDay</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
    </style>

    <!-- Rounded ImageView -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>

    <!-- Toolbar -->
    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/colorPrimaryDay</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantDay</item>
        <item name="colorOnPrimary">@color/colorOnSecondaryDay</item>
    </style>

    <!-- Background screen -->
    <style name="backgroundColor">
        <item name="android:background">@color/backgroungDay</item>
    </style>

    <style name="backgroundColor.card">
        <item name="android:background">@color/backgroundCardDay</item>
    </style>

    <style name="backgroundColor.dividerDetailsWine">
        <item name="android:background">@color/colorPrimaryDay</item>
    </style>

    <!-- Background Buttons -->
    <style name="backgroundColor.ButtonDelete" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorSecondaryVariantDay</item>
        <item name="rippleColor">@color/backgroundCardNight</item>
    </style>

    <style name="backgroundColor.ButtonEditar" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorSecondaryDay</item>
        <item name="rippleColor">@color/backgroundCardNight</item>
    </style>

    <style name="TitleH1">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDay</item>
    </style>

    <style name="TitleH2">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleH3">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewDetalhesForm">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>