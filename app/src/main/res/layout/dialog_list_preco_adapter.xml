<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tv_date_purchase"
            style="@style/TextViewDetalhesForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/tv_amount_purchase"
            style="@style/TextViewDetalhesForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@+id/tv_store_purchase"
            app:layout_constraintTop_toBottomOf="@+id/tv_store_purchase" />

    <TextView
            android:id="@+id/tv_price_purchase"
            style="@style/TextViewDetalhesForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_amount_purchase"
            app:layout_constraintStart_toEndOf="@+id/tv_amount_purchase"
            app:layout_constraintTop_toBottomOf="@+id/tv_store_purchase" />

    <TextView
            android:id="@+id/tv_vintage_purchase"
            style="@style/TextViewDetalhesForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_date_purchase"
            app:layout_constraintStart_toEndOf="@+id/tv_date_purchase"
            app:layout_constraintTop_toTopOf="@+id/tv_date_purchase" />

    <TextView
            android:id="@+id/tv_store_purchase"
            style="@style/TextViewDetalhesForm"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@+id/tv_date_purchase"
            app:layout_constraintTop_toBottomOf="@+id/tv_date_purchase" />

    <TextView
            android:id="@+id/tv_comment_purchase"
            style="@style/TextViewDetalhesForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_amount_purchase" />

    <View
            android:id="@+id/vw_divider"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_comment_purchase" />

    <ImageButton
            android:id="@+id/ibt_update_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            app:layout_constraintBottom_toTopOf="@+id/vw_divider"
            app:layout_constraintEnd_toStartOf="@+id/ibt_delete_comment"
            app:layout_constraintHorizontal_bias="0.826"
            app:layout_constraintStart_toEndOf="@+id/tv_store_purchase"
            app:layout_constraintTop_toTopOf="@+id/ibt_delete_comment"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_edit" />

    <ImageButton
            android:id="@+id/ibt_delete_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="?android:selectableItemBackground"
            app:layout_constraintBottom_toTopOf="@+id/vw_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/tv_store_purchase"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_delete_forever" />

</androidx.constraintlayout.widget.ConstraintLayout>